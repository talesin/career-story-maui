<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="CareerStory.MainPage">  

    <VerticalStackLayout Padding="30" Spacing="16">
        <Editor  
            x:Name="Story"  
            Placeholder="Enter your story here..."  
            AutoSize="TextChanges"  
            HeightRequest="250"  
            FontSize="18"  
            TextChanged="OnStoryTextChanged" />  

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">  
            <Button  
                x:Name="Score"  
                Text="Score"  
                Clicked="OnScoreClicked"  
                Grid.Column="0"  
                IsEnabled="False" />  

            <Button  
                x:Name="Review"  
                Text="Review"  
                Clicked="OnReviewClicked"  
                Grid.Column="1"  
                IsEnabled="False" />  
        </Grid>  

        <!-- Removed StoryScore display fields from main page -->
        <!-- The score details will now be shown in a popup window -->
    </VerticalStackLayout>  
</ContentPage>
