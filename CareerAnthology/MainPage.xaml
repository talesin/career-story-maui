<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="CareerAnthology.MainPage">  

    <VerticalStackLayout Padding="30" Spacing="16">
        <Editor  
            x:Name="Story"  
            Placeholder="Enter your story here..."  
            AutoSize="TextChanges"  
            HeightRequest="250"  
            FontSize="18"  
            TextChanged="OnStoryTextChanged" />  

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">  
            <Button  
                x:Name="Score"  
                Text="Score"  
                Clicked="OnScoreClicked"  
                Grid.Column="0"  
                IsEnabled="False" />  

            <Button  
                x:Name="Review"  
                Text="Review"  
                Clicked="OnReviewClicked"  
                Grid.Column="1"  
                IsEnabled="False" />  
        </Grid>  

        <!-- Scrollable section for StoryScore display fields -->  
        <ScrollView HeightRequest="300">  
            <VerticalStackLayout Spacing="8">  
                <Label Text="Relevance:" FontAttributes="Bold" />  
                <Label x:Name="RelevanceLabel" Text="" />  

                <Label Text="Ownership:" FontAttributes="Bold" />  
                <Label x:Name="OwnershipLabel" Text="" />  

                <Label Text="Complexity:" FontAttributes="Bold" />  
                <Label x:Name="ComplexityLabel" Text="" />  

                <Label Text="Influence:" FontAttributes="Bold" />  
                <Label x:Name="InfluenceLabel" Text="" />  

                <Label Text="Outcome:" FontAttributes="Bold" />  
                <Label x:Name="OutcomeLabel" Text="" />  

                <Label Text="Reflection:" FontAttributes="Bold" />  
                <Label x:Name="ReflectionLabel" Text="" />  

                <Label Text="Areas For Improvement:" FontAttributes="Bold" />  
                <Label x:Name="AreasForImprovmentLabel" Text="" />  

                <Label Text="Total Score:" FontAttributes="Bold" />  
                <Label x:Name="TotalScoreLabel" Text="" />  
            </VerticalStackLayout>  
        </ScrollView>  
    </VerticalStackLayout>  
</ContentPage>
